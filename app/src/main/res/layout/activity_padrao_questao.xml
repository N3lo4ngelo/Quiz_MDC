<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/planodefundo"
    tools:context=".padraoQuestao">

    <TextView
        android:id="@+id/txtTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="168dp"
        android:fontFamily="@font/anton"
        android:text="00:00"
        android:textColor="#FBF8F8"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNomePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/anton"
        android:text="Jogador: ***********"
        android:textColor="#FBF8F8"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTimer" />

    <TextView
        android:id="@+id/txtScorePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/anton"
        android:text="Score: 00"
        android:textColor="#FBF8F8"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtNomePlayer"
        app:layout_constraintTop_toBottomOf="@+id/txtTimer" />

    <Button
        android:id="@+id/btQuestao1"
        android:layout_width="339dp"
        android:layout_height="67dp"
        android:layout_marginStart="36dp"
        android:backgroundTint="#BAFFFFFF"
        android:fontFamily="@font/anton"
        android:text="Opção 1"
        android:textAlignment="textStart"
        android:textColor="#0B0909"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#000000"
        app:strokeWidth="6px"
        tools:layout_editor_absoluteY="425dp" />

    <Button
        android:id="@+id/btQuestao2"
        android:layout_width="339dp"
        android:layout_height="67dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#BAFFFFFF"
        android:fontFamily="@font/anton"
        android:text="Opção 2"
        android:textAlignment="textStart"
        android:textColor="#0B0909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btQuestao1"
        app:strokeColor="#000000"
        app:strokeWidth="6px" />

    <Button
        android:id="@+id/btQuestao3"
        android:layout_width="339dp"
        android:layout_height="67dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#BAFFFFFF"
        android:fontFamily="@font/anton"
        android:text="Opção 3"
        android:textAlignment="textStart"
        android:textColor="#0B0909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btQuestao2"
        app:strokeColor="#000000"
        app:strokeWidth="6px" />

    <Button
        android:id="@+id/btQuestao4"
        android:layout_width="339dp"
        android:layout_height="67dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#BAFFFFFF"
        android:fontFamily="@font/anton"
        android:text="Opção 4"
        android:textAlignment="textStart"
        android:textColor="#0B0909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btQuestao3"
        app:strokeColor="#000000"
        app:strokeWidth="6px" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="346dp"
        android:layout_height="299dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNomePlayer"
        app:srcCompat="@drawable/question"
        tools:layout_editor_absoluteX="36dp" />

    <TextView
        android:id="@+id/tvQuestao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="137dp"
        android:layout_marginTop="37dp"
        android:fontFamily="@font/anton"
        android:text="QUESTÃO"
        android:textColor="#070606"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/tvPergunta"
        android:layout_width="268dp"
        android:layout_height="28dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/anton"
        android:text="TextView"
        android:textColor="#090808"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestao" />

</androidx.constraintlayout.widget.ConstraintLayout>